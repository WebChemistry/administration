<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title n:inner-block="setTitle">Administrace{ifset #title} - {include title|striptags|strip}{/ifset}</title>

    {block head}
		<!-- Icons -->
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

		<link rel="stylesheet" href="{$assetsPath}/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
		<link rel="stylesheet" href="{$assetsPath}/css/adminlte.min.css">

		<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

        <link rel="shortcut icon" type="image/png" href="{$assetsPath}/favicon.png">
    {/block}
</head>
<body class="hold-transition sidebar-mini layout-fixed">

	<div class="wrapper">
		<!-- Navbar -->
		<nav class="main-header navbar navbar-expand navbar-white navbar-light">
			<!-- Left navbar links -->
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
					<a href="{$basePath}/" class="nav-link">Zpět na web</a>
				</li>
				<li class="nav-item d-none d-sm-inline-block">
					<a href="{$homepageLink}" class="nav-link">Domů</a>
				</li>
			</ul>

			<!-- Right navbar links -->
			<ul class="navbar-nav ml-auto">
				<li class="nav-item">
					<a n:href="Sign:out">Odhlásit se</a>
				</li>
			</ul>
		</nav>
		<!-- /.navbar -->

		<!-- Main Sidebar Container -->
		<aside class="main-sidebar sidebar-dark-primary elevation-4">
			<!-- Brand Logo -->
			<a href="{$homepageLink}" class="brand-link text-center">
				<span class="brand-text">Administrace</span>
			</a>

			<!-- Sidebar -->
			<div class="sidebar">
				<div class="user-panel mt-3 pb-3 mb-3 d-flex">
					<div class="image">
						<img n:img="$user->getEntity()->avatar, avatar" class="img-circle elevation-2" alt="User Image">
					</div>
					<div class="info">
						<a class="d-block">{$user->getName()}</a>
					</div>
				</div>

				{control menu}
			</div>
		</aside>

		<!-- Content Wrapper. Contains page content -->
		<div class="content-wrapper">

			<section class="content-header">

			</section>

			<!-- Main content -->
			<section class="content">

				<div class="container-fluid">
					{include #content}
				</div>
			</section>
			<!-- /.content -->
		</div>
		<!-- /.content-wrapper -->
	</div>

	{block scripts}
		<script src="{$assetsPath}/plugins/jquery/jquery.min.js"></script>
		<script src="{$assetsPath}/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
		<script src="{$assetsPath}/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
		<script src="{$assetsPath}/js/adminlte.min.js"></script>
	{/block}

</body>
